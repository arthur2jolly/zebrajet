{% extends 'layout-home.html.twig' %}

{% block preContent %}
    {% spaceless %}
    <div id="c1-header">
        <div id="header-content" class="container_24">
            <div class="c1-slideshow">
                <div id="c1-slider" class="cycle-slideshow"
                     data-cycle-fx="scrollHorz"
                     data-cycle-pause-on-hover="true"
                     data-cycle-speed="200"
                        >
                    <img src="/assets/slider/mec.jpg" alt="" class="slide-img"/>
                    <img src="/assets/slider/vincent-instructor.jpg" alt="" class="slide-img"/>
                    <img src="/assets/slider/enfant.jpg" alt="" class="slide-img"/>
                    <img src="/assets/slider/montagne.jpg" alt="" class="slide-img"/>
                </div>
                <input type="hidden" class="base-url" value="http://zebrajet.loc"/>
            </div>

            <div id="c1-nav" style=""></div>

        </div>
        <!-- end header-content -->
        <div class="clear"></div>
        <div id="c1-shadow" class="container_24 pngfix"></div>
    </div>
    {% endspaceless %}
{% endblock %}


{% block box1 %}
